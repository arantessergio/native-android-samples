<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarDetailsImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/detailsOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/detailsRepoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/detailsRepoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/detailsRepoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/detailsRepoUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/detailsRepoLicenseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

    </LinearLayout>

</android.widget.LinearLayout>